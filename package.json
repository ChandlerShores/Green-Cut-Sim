{
  "name": "greencut-v2-lite",
  "version": "2.0.0",
  "description": "GreenCut V2 Lite - Business simulation with LLM evaluation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:ui\"",
    "dev:server": "tsx watch src/server.ts",
    "dev:ui": "vite",
    "build": "tsc && vite build",
    "build:server": "tsc --outDir dist --rootDir src --target ES2022 --module CommonJS --moduleResolution node --esModuleInterop --allowSyntheticDefaultImports src/server.ts src/engine.ts src/evaluator.ts src/narrator.ts src/contracts.ts",
    "build:all": "npm run build && npm run build:server",
    "test": "vitest",
    "start": "tsx src/server.ts",
    "reset": "node -e \"require('fs').writeFileSync('run.jsonl', '')\""
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "openai": "^4.20.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "concurrently": "^8.2.2",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
